doctype 5
html
  head
    title Canvas Model Design :: #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    script
      var scripts = [];
  body
    #wrap
      .container-fluid
        .row-fluid
            .span8.offset2.logo
                h1.pull-left
                    a(class="brand", href="/")
                        img(alt="Canvas Model Design", src="/images/logo.png")
                ul.pull-right
                    li
                      a(href='/about') About
                    li
                        iframe(class='vote-up', src="http://nodeknockout.com/iframe/intergrupo-mobile", frameborder='0', scrolling='no', allowtransparency='true', width='115', height='25')
                    li 
                      a.twitter-share-button(href='https://twitter.com/share', data-text='Share your business ideas with Canvas Model Design', data-via='canvasmodel', data-size='large', data-count='none') Tweet
                      script
                          !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
                    
        .row-fluid
            .span8.offset2
                block content
                #push
                #footer
                    p.pull-left Share your love and vote for us! &nbsp;
                        i(class='icon-heart')
                    iframe(src="http://nodeknockout.com/iframe/intergrupo-mobile", frameborder='0', scrolling='no', allowtransparency='true', width='115', height='20')
                    a(class="Intergrupo", href="http://www.intergrupo.com")
                        img(alt="Intergrupo Mobile", src="/images/logo-mobile.png", class="pull-right")
    script(src='/javascripts/jquery.js')

    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/jquery.roundabout.js')
    script(src='/javascripts/index.js')
    script
      (function() {
        scripts.forEach(function(file) {
          $.getScript(file, function() {
            console.log(file + " loaded..");
          });
        });
      })();
