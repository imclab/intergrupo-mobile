extends layout

block content
  div(class='hero-unit')
    div(class="canvas-menu")
        ul(class="roundabout")
            li
                a(href='#canvas-new-modal', role='button', data-toggle='modal')
                    img(alt="", src="images/canvas_bmg.png", data-toggle='modal' )
            li
                a(href='#canvas-new-modal', role='button', data-toggle='modal')
                    img(alt="", src="images/canvas_bmy.png", data-toggle='modal' )
            li
                a(href='#canvas-new-modal', role='button', data-toggle='modal')
                    img(alt="", src="images/canvas_empty.png", data-toggle='modal' )

  div(id='canvas-new-modal', class='modal hide fade')
    form(action='/canvas/create', method='POST', class='form-vertical')
      .modal-header
        button(type='button', class='close', data-dismiss='modal', aria-hidden='true') x
        h3 Setup your Canvas
      .modal-body
        input(name='title', type='text', placeholder='Canvas title')
      .modal-footer
        button(class='btn', data-dismiss='modal', aria-hidden='true') Cancel
        button(type='submit', class='btn btn-primary') Create!

