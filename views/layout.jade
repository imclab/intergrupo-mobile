doctype 5
html
  head
    title Canvas Model Design :: #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    script
      var scripts = [];
  body
    #wrap
      .navbar.navbar-fixed-top
        .navbar-inner
          .container-fluid
            a(class="brand", href="/") Canvas Model Design
            ul(class="nav")
              li
                a(href='/about') About
            ul(class='nav pull-right')
              li
                iframe(class='vote-up', src="http://nodeknockout.com/iframe/intergrupo-mobile", frameborder='0', scrolling='no', allowtransparency='true', width='115', height='25')
      .container-fluid
        .row-fluid
          block content
        #push
        #footer
          .credits
            p(class='muted')
              p(style='float:left') Share your love and vote for us! &nbsp;
                i(class='icon-heart')
              iframe(src="http://nodeknockout.com/iframe/intergrupo-mobile", frameborder='0', scrolling='no', allowtransparency='true', width='115', height='20')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/jquery.js')
    script(src='/javascripts/jcanvas.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/handlebars.js')
    script(src='/javascripts/canvas-templates.js')
    script(src='/javascripts/jquery.roundabout.js')
    script(src='/javascripts/index.js')
    script
      (function() {
        scripts.forEach(function(file) {
          $.getScript(file, function() {
            console.log(file + " loaded..");
          }).fail(function(xhr, setting, ex) {
            console.log("An error ocurred while loading " + file);
            console.log(ex);
          });
        });
      })();
